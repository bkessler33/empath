{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["DOM", "ES2020"],
      "jsx": "react-jsx",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": [
      "src/renderer/**/*.ts",
      "src/renderer/**/*.tsx"
    ],
    "exclude": ["node_modules"]
  }